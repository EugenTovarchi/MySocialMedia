@using MySocialMedia.ViewModels.Account
@inject IWebHostEnvironment HostEnvironment

@model MySocialMedia.ViewModels.Account.RegisterViewModel

﻿@{
    ViewData["Title"] = "Register";
}


<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="auth-block">
    @if (HostEnvironment.IsDevelopment())
    {
        <div class="alert alert-info mb-3">
            <small>Режим разработки: форма предзаполнена тестовыми данными</small>
        </div>
    }

    <h4 class="text-center">Впервые с нами?</h4>
    <p class="text-center text-muted">Регистрация нового пользователя</p>

    <form  method="get" asp-controller="Register" asp-action="RegisterPart2">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <input asp-for="BirthDate" class="form-control" id="birthDatePicker" />
        </div>

        <button type="submit" class="btn btn-primary btn-block">Продолжить регистрацию</button>
    </form>


    <script src="http://code.jquery.com/jquery-latest.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            flatpickr("#birthDatePicker", {
                locale: "ru",
                dateFormat: "d.m.Y",
                altInput: true,
                altFormat: "Y-m-d", // ISO формат для сервера
                defaultDate: new Date().setFullYear(new Date().getFullYear() - 18),
                maxDate: new Date().setFullYear(new Date().getFullYear() - 14),
                minDate: new Date().setFullYear(new Date().getFullYear() - 100)
            });
        </script>
    }
</div>